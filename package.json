{
  "private": true,
  "scripts": {
    "start": "lerna run --scope @openmsupply-*/* --parallel start",
    "build": "lerna run --scope @openmsupply-client/* build",
    "serve": "lerna run --scope @openmsupply-client/* --parallel serve",
    "clean": "lerna run --scope @openmsupply-client/* --parallel clean",
    "compile": "lerna run --scope @openmsupply-client/* --parallel tsc",
    "prepare": "husky install",
    "pre-commit-lint": "yarn compile && yarn lint-staged",
    "test": "jest --config ./jest.config.js"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@swc/cli": "^0.1.46",
    "@swc/core": "^1.2.66",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.6.1",
    "@types/react": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "^7.31.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-jest-dom": "^3.9.0",
    "eslint-plugin-react": "^7.24.0",
    "jest": "^27.0.6",
    "lerna": "^3.22.1",
    "swc-loader": "^0.1.14",
    "ts-jest": "^27.0.4",
    "webpack-bundle-analyzer": "^4.4.2",
    "webpack-dev-server": "4.0.0-beta.3"
  },
  "lint-staged": {
    "src/**/*.+(js|json|ts|tsx)": [
      "eslint"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "name": "openmsupply-client",
  "dependencies": {
    "@types/react-dom": "^17.0.9",
    "react-intl": "^5.20.6"
  }
}
